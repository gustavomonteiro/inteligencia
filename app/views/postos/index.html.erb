<%- model_class = Posto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:endereco) %></th>
      <th><%= model_class.human_attribute_name(:bairro) %></th>
      <th><%= model_class.human_attribute_name(:distribuidora) %></th>
      <th><%= model_class.human_attribute_name(:preco_venda) %></th>
      <th><%= model_class.human_attribute_name(:preco_compra) %></th>
      <th><%= model_class.human_attribute_name(:modalidade) %></th>
      <th><%= model_class.human_attribute_name(:fornecedor) %></th>
      <th><%= model_class.human_attribute_name(:data_coleta) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @postos.each do |posto| %>
      <tr>
        <td><%= link_to posto.id, posto_path(posto) %></td>
        <td><%= posto.nome %></td>
        <td><%= posto.endereco %></td>
        <td><%= posto.bairro %></td>
        <td><%= posto.distribuidora %></td>
        <td><%= posto.preco_venda %></td>
        <td><%= posto.preco_compra %></td>
        <td><%= posto.modalidade %></td>
        <td><%= posto.fornecedor %></td>
        <td><%= posto.data_coleta %></td>
        <td><%=l posto.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_posto_path(posto), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      posto_path(posto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_posto_path,
            :class => 'btn btn-primary' %>
