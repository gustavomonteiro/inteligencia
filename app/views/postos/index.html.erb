<h1>Listing postos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Bairro</th>
    <th>Distribuidora</th>
    <th>Preco venda</th>
    <th>Preco compra</th>
    <th>Modalidade</th>
    <th>Fornecedor</th>
    <th>Data coleta</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @postos.each do |posto| %>
  <tr>
    <td><%= posto.nome %></td>
    <td><%= posto.endereco %></td>
    <td><%= posto.bairro %></td>
    <td><%= posto.distribuidora %></td>
    <td><%= posto.preco_venda %></td>
    <td><%= posto.preco_compra %></td>
    <td><%= posto.modalidade %></td>
    <td><%= posto.fornecedor %></td>
    <td><%= posto.data_coleta %></td>
    <td><%= link_to 'Show', posto %></td>
    <td><%= link_to 'Edit', edit_posto_path(posto) %></td>
    <td><%= link_to 'Destroy', posto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

